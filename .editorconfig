root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[{*.yml,*.yaml}]
indent_size = 2

[*.{md,markdown}]
insert_final_newline = false
trim_trailing_whitespace = false

[{.eslintrc,.stylelintrc,jest.config,.babelrc,bowerrc,*.json,*.jsb3,*.jsb2}]
indent_size = 2
insert_final_newline = false

[*.ts]
indent_size = 2

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.html]
indent_size = 2
